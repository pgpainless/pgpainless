<configuration>
    <appender name="STDERR" class="ch.qos.logback.core.ConsoleAppender">
        <target>System.err</target>
        <encoder>
            <pattern>%blue(%-5level) %green(%logger{35}) - %msg %n</pattern>
        </encoder>
    </appender>

    <logger name="org.apache" level="INFO ">
        <appender-ref ref="STDERR"/>
    </logger>
</configuration>